<?xml version="1.0" encoding="UTF-8"?>
<workflow-app xmlns="uri:oozie:workflow:0.2" name="securityx-convert-streaming-wf">
    <start to="convert-streaming-node"/>
    <action name="convert-streaming-node">
        <map-reduce>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <delete path="${workflowRoot}/output-data/streaming"/>
            </prepare>
            <streaming>
                <mapper>${mapCommand}</mapper>
                <reducer>/bin/cat</reducer>
            </streaming>
            <configuration>
                <property>
                    <name>mapreduce.reduce.class</name>
                    <value>org.apache.hadoop.mapred.lib.IdentityReducer</value>
                </property>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
                <property>
                    <name>mapred.input.dir</name>
                    <value>${inputs}</value>
                </property>
                <property>
                    <name>mapred.output.dir</name>
                    <value>${outputs}</value>
                </property>
            </configuration>
            <file>${workflowRoot}/mapper.py#mapper.py</file>
        </map-reduce>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
        <message>Streaming Map/Reduce failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
