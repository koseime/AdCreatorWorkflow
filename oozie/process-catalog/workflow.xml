<?xml version="1.0" encoding="UTF-8"?>
<workflow-app xmlns="uri:oozie:workflow:0.2" name="process-catalog-wf">
    <start to="distcp-node"/>

    <action name="distcp-node">
        <distcp xmlns="uri:oozie:distcp-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <delete path="${advertiserRoot}/raw-catalog/${catalogName}"/>
                <mkdir path="${advertiserRoot}/raw-catalog/"/>
            </prepare>
            <arg>-Dfs.s3n.awsAccessKeyId=${awsAccessKey}</arg>
            <arg>-Dfs.s3n.awsSecretAccessKey=${awsSecretKey}</arg>
            <arg>${catalogLocation}</arg>
            <arg>${advertiserRoot}/raw-catalog/${catalogName}</arg>
        </distcp>
        <ok to="extract-header"/>
        <error to="fail"/>
    </action>

    <action name="extract-header">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <main-class>com.kosei.adcreatorworkflow.hadoop.GoogleHeaderExtractor</main-class>
            <arg>${advertiserRoot}/raw-catalog/${catalogName}</arg>
            <arg>${advertiserRoot}/raw-catalog/${catalogName}.header</arg>
        </java>
        <ok to="parse-catalog"/>
        <error to="fail"/>
    </action>

    <action name='parse-catalog'>
        <map-reduce>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <delete path="${parsedCatalogDir}"/>
                <mkdir path="${processedCatalogRoot}/"/>
            </prepare>

            <configuration>
                <property>
                    <name>mapred.mapper.new-api</name>
                    <value>true</value>
                </property>
                <property>
                    <name>mapred.reducer.new-api</name>
                    <value>true</value>
                </property>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
                <property>
                    <name>mapreduce.job.map.class</name>
                    <value>com.kosei.adcreatorworkflow.hadoop.GoogleTextParserMapper</value>
                </property>
                <property>
                    <name>mapreduce.job.reduce.class</name>
                    <value>com.kosei.adcreatorworkflow.hadoop.GoogleTextParserReducer</value>
                </property>
                <property>
                    <name>mapreduce.job.reduces</name>
                    <value>20</value>
                </property>
                
                <property>
                    <name>mapreduce.job.inputformat.class</name>
                    <value>org.apache.hadoop.mapreduce.lib.input.TextInputFormat</value>
                </property>
                <property>
                    <name>mapreduce.map.output.key.class</name>
                    <value>org.apache.hadoop.io.Text</value>
                </property>
                <property>
                    <name>mapreduce.map.output.value.class</name>
                    <value>com.kosei.adcreatorworkflow.hadoop.io.AdCreatorAssetsWritable</value>
                </property>
                <property>
                    <name>mapreduce.job.outputformat.class</name>
                    <value>org.apache.hadoop.mapreduce.lib.output.SequenceFileOutputFormat</value>
                </property>
                <property>
                    <name>mapreduce.job.output.key.class</name>
                    <value>org.apache.hadoop.io.NullWritable</value>
                </property>
                <property>
                    <name>mapreduce.job.output.value.class</name>
                    <value>com.kosei.adcreatorworkflow.hadoop.io.AdCreatorAssetsWritable</value>
                </property>
                <property>
                    <name>mapreduce.input.fileinputformat.inputdir</name>
                    <value>${advertiserRoot}/raw-catalog/${catalogName}</value>
                </property>
                <property>
                    <name>mapreduce.output.fileoutputformat.outputdir</name>
                    <value>${parsedCatalogDir}</value>
                </property>
                <property>
                    <name>catalog.timestamp</name>
                    <value>${timestamp}</value>
                </property>
                <property>
                    <name>catalog.header.file</name>
                    <value>${catalogName}.header</value>
                </property>
                <property>
                    <name>meta.output</name>
                    <value>${metaCatalogDir}</value>
                </property>
            </configuration>
            <file>${advertiserRoot}/raw-catalog/${catalogName}.header</file>
        </map-reduce>
        <ok to="crawl-catalog"/>
        <error to="fail"/>
    </action>

    <action name='crawl-catalog'>
        <map-reduce>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <delete path="${imageCatalogDir}"/>
            </prepare>

            <configuration>
                <property>
                    <name>mapred.mapper.new-api</name>
                    <value>true</value>
                </property>
                <property>
                    <name>mapred.reducer.new-api</name>
                    <value>true</value>
                </property>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
                <property>
                    <name>mapreduce.job.map.class</name>
                    <value>com.kosei.adcreatorworkflow.hadoop.ByteWritableImageCrawlerMapper</value>
                </property>

                <property>
                    <name>mapreduce.job.inputformat.class</name>
                    <value>org.apache.hadoop.mapreduce.lib.input.SequenceFileInputFormat</value>
                </property>
                <property>
                    <name>mapreduce.job.outputformat.class</name>
                    <value>org.apache.hadoop.mapreduce.lib.output.SequenceFileOutputFormat</value>
                </property>
                <property>
                    <name>mapreduce.job.output.key.class</name>
                    <value>org.apache.hadoop.io.NullWritable</value>
                </property>
                <property>
                    <name>mapreduce.job.output.value.class</name>
                    <value>org.apache.hadoop.io.BytesWritable</value>
                </property>

                <property>
                    <name>mapreduce.input.fileinputformat.inputdir</name>
                    <value>${parsedCatalogDir}</value>
                </property>
                <property>
                    <name>mapreduce.output.fileoutputformat.outputdir</name>
                    <value>${imageCatalogDir}</value>
                </property>

            </configuration>
        </map-reduce>
        <ok to="copy-to-archive"/>
        <error to="fail"/>
    </action>

    <action name="copy-to-archive">
        <distcp xmlns="uri:oozie:distcp-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <delete path="${advertiserRoot}/catalog/archive/${catalogId}/${catalogName}.images"/>
                <mkdir path="${advertiserRoot}/catalog/archive/${catalogId}/_SUCCESS"/>
            </prepare>
            <arg>-Dfs.s3n.awsAccessKeyId=${awsAccessKey}</arg>
            <arg>-Dfs.s3n.awsSecretAccessKey=${awsSecretKey}</arg>
            <arg>${imageCatalogDir}</arg>
            <arg>${advertiserRoot}/catalog/archive/${catalogId}</arg>
        </distcp>
        <ok to="upload-catalog-meta"/>
        <error to="fail"/>
    </action>

    <action name="upload-catalog-meta">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <main-class>com.kosei.dropwizard.management.client.cli.UploadProductsToCategories</main-class>
            <arg>${managementClientApiEndPoint}</arg>
            <arg>${managementClientApiToken}</arg>
            <arg>${catalogId}</arg>
            <arg>${metaCatalogDir}</arg>
        </java>
        <ok to="end"/>
        <error to="fail"/>
    </action>

    <kill name="fail">
        <message>Failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>

    <end name="end"/>

</workflow-app>
